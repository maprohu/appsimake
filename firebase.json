{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "cleanUrls": true,
    "redirects" : [
      {
        "source": "/",
        "destination": "/index/",
        "type": 301
      }
    ],
    "headers": [
      {
        "source": "/*",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31556926"
          }
        ]
      },
      {
        "source": "/nocache/**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache"
          }
        ]
      },
      {
        "source": "/cache/**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31556926"
          }
        ]
      }
    ]
  }
}
